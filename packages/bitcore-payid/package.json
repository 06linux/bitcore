{
  "name": "bitcore-payid",
  "version": "1.0.0",
  "description": "Bitcore library for PayID",
  "author": "BitPay Inc",
  "license": "MIT",
  "main": "ts_build/src/index.js",
  "keywords": [
    "bitcoin",
    "payid",
    "bitcore"
  ],
  "engine": "node >= 12.0.0",
  "scripts": {
    "start": "npm run build && node ts_build/src/index.js",
    "build": "npm run clean && node build.js",
    "clean": "rm -rf ts_build",
    "test": "tsc && jest --debug",
    "test:all": "npm run build && mocha 'ts_build/test/**/*.spec.js' --colors",
    "test:unit": "npm run build && mocha 'ts_build/test/unit/**/*.spec.js' --colors",
    "test:integration": "npm run build && mocha 'ts_build/test/integration/**/*.spec.js' --colors"
  },
  "dependencies": {
    "@payid-org/utils": "^1.2.0",
    "asn1.js": "^5.4.1",
    "bitcore-lib": "^8.22.2",
    "elliptic": "^6.5.3",
    "hash.js": "^1.1.7"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.11.2",
    "browserify": "^17.0.0",
    "chai": "^4.2.0",
    "jest": "^26.6.1",
    "mocha": "^8.1.3",
    "sinon": "^9.0.3",
    "tsify": "^5.0.2",
    "typescript": "^4.0.3",
    "uglify": "^0.1.5"
  }
}
